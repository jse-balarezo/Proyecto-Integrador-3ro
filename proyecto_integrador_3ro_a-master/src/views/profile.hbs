<style>
    .margin-rigth {
        margin-right: 25px;
    }

    .center-img {
        display: flex;
        justify-content: center;
    }



    P {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        text-align: center;
    }

    .align-left p {
        text-align: left;
    }

    .align-right {
        display: flex;
        justify-content: flex-end;
        align-items: center;
    }


    .f-s-30 {
        font-size: 30px;
    }
